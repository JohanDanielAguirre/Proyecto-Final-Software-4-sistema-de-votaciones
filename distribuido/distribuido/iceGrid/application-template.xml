<icegrid>
    <application name="distribuido">

        <server-template id="server">
            <parameter name="index"/>
            <server id="server-${index}" exe="java" activation="on-demand">
                <option>-jar</option>
                <option>../server/build/libs/server.jar</option>
                <adapter name="ServerAdapter" endpoints="tcp -h localhost">
                    <object identity="SimpleServer-${index}" type="::Demo::Printer"/>
                </adapter>
            </server>
        </server-template>

        <node name="node1">
            <server-instance template="server" index="1"/>
            <server-instance template="server" index="2"/>
            <server-instance template="server" index="3"/>
        </node>

    </application>
</icegrid>